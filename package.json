{
  "name": "sketch-share-as-is",
  "version": "1.0.0",
  "description": "Quickly copy to clipboard and share artboards the way they look in Sketch itself, with titles, borders and backgrounds.",
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turbobabr/sketch-share-as-is.git"
  },
  "author": "Andrey Shakhmin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/turbobabr/sketch-share-as-is/issues"
  },
  "homepage": "https://github.com/turbobabr/sketch-share-as-is#readme",
  "skpm": {
    "name": "Share As Is!",
    "manifest": "src/manifest.json",
    "main": "share-as-is.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "devDependencies": {
    "@skpm/builder": "^0.4.0"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "sketch-color": "^0.1.1",
    "sketch-constants": "^1.1.0",
    "tinycolor2": "^1.4.1"
  }
}
